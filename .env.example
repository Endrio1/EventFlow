# Configurações do Servidor
PORT=3000
NODE_ENV=development

# Configurações do Banco de Dados PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eventflow
DB_USER=postgres
DB_PASSWORD=sua_senha_aqui

# Configurações JWT
JWT_SECRET=sua_chave_secreta_super_segura_aqui_mude_isso_em_producao
JWT_EXPIRES_IN=7d

# Configurações de Email (SMTP)
# Para desenvolvimento com Gmail:
# 1. Acesse https://myaccount.google.com/security
# 2. Ative a verificação em duas etapas
# 3. Crie uma "Senha de app" em https://myaccount.google.com/apppasswords
# 4. Use essa senha de app no SMTP_PASS

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-de-app-do-gmail
SMTP_FROM=seu-email@gmail.com

# URL base da aplicação (usado no link de recuperação de senha)
BASE_URL=http://localhost:3000

